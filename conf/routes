# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# ==============================================================================================

# Cocineros
POST    /cocinero/                      controllers.CocineroController.crearCocinero()
GET     /cocinero/:id                   controllers.CocineroController.obtenerCocinero(id: Long)
GET     /cocineros/:page                controllers.CocineroController.obtenerCocineros(page: Integer)
PUT     /cocinero/:id                   controllers.CocineroController.editarCocinero(id: Long)
DELETE  /cocinero/:id                   controllers.CocineroController.borrarCocinero(id: Long)

# Recetas
POST    /receta/                        controllers.RecetaController.crearReceta()
GET     /receta/:id                     controllers.RecetaController.obtenerReceta(id: Long)
GET     /recetas/:page                  controllers.RecetaController.obtenerRecetas(page: Integer)
GET     /recetas/:page/cocinero/:idCocinero   controllers.RecetaController.obtenerRecetasCocinero(idCocinero: Long, page: Integer)
PUT     /receta/:id                     controllers.RecetaController.editarReceta(id: Long)
DELETE  /receta/:id                     controllers.RecetaController.borrarReceta(id: Long)

# Pasos
POST    /paso/                          controllers.PasoController.crearPaso()
GET     /paso/:id                       controllers.PasoController.obtenerPaso(id: Long)
GET     /pasos/:page/receta/:idReceta   controllers.PasoController.obtenerPasos(page: Integer, idReceta: Long)
PUT     /paso/:id                       controllers.PasoController.editarPaso(id: Long)
DELETE  /paso/:id                       controllers.PasoController.borrarPaso(id: Long)

# Ingredientes
POST    /ingrediente/                   controllers.IngredienteController.crearIngrediente()
GET     /ingredientes/:page             controllers.IngredienteController.obtenerIngredientes(page: Integer)
PUT     /ingrediente/:id                controllers.IngredienteController.editarIngrediente(id: Long)
DELETE  /ingrediente/:id                controllers.IngredienteController.borrarIngrediente(id: Long)

POST    /receta/:idR/ingrediente/:idI   controllers.RecetaController.anadirIngrediente(idR: Long, idI: Long)
DELETE  /receta/:idR/ingrediente/:idI   controllers.RecetaController.quitarIngrediente(idR: Long, idI: Long)

# tags
POST    /tag/                          controllers.TagController.crearTag()
GET     /tag/:id                       controllers.TagController.obtenerTag(id: Long)
GET     /tags/receta/:idReceta                controllers.TagController.obtenerTags(idReceta: Long)
PUT     /tag/:id                       controllers.TagController.editarTag(id: Long)
DELETE  /tag/:id                       controllers.TagController.borrarTag(id: Long)

# b√∫squeda
GET     /recetas/busqueda/                    controllers.RecetaController.busqueda()