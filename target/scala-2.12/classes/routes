# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

##########

# Cocineros
POST    /cocinero/                  controllers.CocineroController.crearCocinero()
GET     /cocinero/                  controllers.CocineroController.obtenerCocinero()
GET     /cocineros/                 controllers.CocineroController.obtenerCocineros()
PUT     /cocinero/                  controllers.CocineroController.editarCocinero()
DELETE  /cocinero/                  controllers.CocineroController.borrarCocinero()

# Recetas
POST    /receta/                    controllers.RecetaController.crearReceta()
GET     /receta/                    controllers.RecetaController.obtenerReceta()
GET     /recetas/                   controllers.RecetaController.obtenerRecetas()
PUT     /receta/                    controllers.RecetaController.editarReceta()
DELETE  /receta/                    controllers.RecetaController.borrarReceta()

# Pasos
POST    /paso/                      controllers.PasoController.crearPaso()
GET     /paso/                      controllers.PasoController.obtenerPaso()
GET     /pasos/                     controllers.PasoController.obtenerPasos()
PUT     /paso/                      controllers.PasoController.editarPaso()
DELETE  /paso/                      controllers.PasoController.borrarPaso()